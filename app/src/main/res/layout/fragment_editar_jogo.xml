<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        android:padding="20dp"
        tools:context=".fragments.EditarJogoFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civFotoJogo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="90dp"
            android:elevation="1dp"
            android:src="@drawable/ic_baseline_camera_alt_24"
            app:civ_border_color="@color/vermelho_principal"
            app:civ_border_width="20dp"
            app:civ_circle_background_color="@color/vermelho_principal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp">

            <include
                android:id="@+id/includeEditarJogoBody"
                layout="@layout/editar_jogo_body"
                android:layout_width="match_parent"
                android:layout_height="480dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>